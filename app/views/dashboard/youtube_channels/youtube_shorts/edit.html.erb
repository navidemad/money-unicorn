<div class="flex items-center justify-between mb-3">
  <h1 class="font-bold text-4xl">Youtube Channel (<%= @youtube_channel.nickname %>)</h1>

  <div class="flex items-center justify-start space-x-3">
    <%= link_to "Edit", edit_dashboard_youtube_channel_path(@youtube_channel), class: "btn btn-primary" %>
    <%= button_to "Destroy", dashboard_youtube_channel_path(@youtube_channel), method: :delete, class: "btn btn-error" %>
  </div>
</div>

<div class="flex items-center justify-between mb-3">
  <h1 class="font-bold text-2xl">Youtube Short (<%= @youtube_short.id %>)</h1>

  <div class="flex items-center justify-start space-x-3">
    <%= button_to regenerate_dashboard_youtube_channel_youtube_short_path(youtube_channel_id: @youtube_channel.id, id: @youtube_short.id),
        method: :post,
        class: "btn btn-secondary btn-sm grow",
        target: "_top",
        data: { turbo_stream: true } do %>
      <span class="mr-2">
        <%= heroicon "arrow-path", variant: "mini", class: "w-4 h-4" %>
      </span>
      Regenerate
    <% end %>
  </div>
</div>

<%= render "form", youtube_short: @youtube_short %>
