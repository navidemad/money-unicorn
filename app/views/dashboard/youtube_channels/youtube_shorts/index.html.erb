<div>
  <h1 class="font-bold text-4xl mb-3">YouTube Shorts Automater</h1>

  <%= button_to "Generate & Upload Video", generate_dashboard_youtube_shorts_path, method: :post %>

  <h2>Uploaded Videos</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Video URL</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @youtube_videos.each do |video| %>
        <tr>
          <td><%= video.title %></td>
          <td><%= video.description %></td>
          <td><%= link_to video.url, video.url, target: "_blank" %></td>
          <td><%= video.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
