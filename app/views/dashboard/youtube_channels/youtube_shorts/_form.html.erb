<%= form_with(model: [:dashboard, youtube_short.youtube_channel, youtube_short]) do |form| %>
  <% if youtube_short.errors.any? %>
    <div class="alert alert-error mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div>
        <h3 class="font-bold">Oops! <%= pluralize(youtube_short.errors.count, "error") %> found</h3>
        <ul class="list-disc ml-6">
          <% youtube_short.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="flex flex-col gap-3">
    <div>
      <div><%= form.label :title, class: "label" %></div>
      <div>
        <%= form.text_field :title, 
            class: class_names("input w-full!",  "input-error": youtube_short.errors[:title].any?), 
            placeholder: "Enter title" %>
        <% if youtube_short.errors[:title].any? %>
          <div class="validator-hint"><%= youtube_short.errors[:title].join(', ') %></div>
        <% end %>
      </div>
    </div>

    <div>
      <div><%= form.label :transcript, class: "label" %></div>
      <div>
        <%= form.text_area :transcript, 
            class: class_names("textarea w-full!", "textarea-error": youtube_short.errors[:transcript].any?),
            placeholder: "Enter transcript",
            rows: 10 %>
        <% if youtube_short.errors[:transcript].any? %>
          <div class="validator-hint"><%= youtube_short.errors[:transcript].join(', ') %></div>
        <% end %>
      </div>
    </div>

    <div>
      <div><%= form.label :description, class: "label" %></div>
      <div>
        <%= form.text_area :description, 
            class: class_names("textarea w-full!", "textarea-error": youtube_short.errors[:description].any?),
            placeholder: "Enter description",
            rows: 5 %>
        <% if youtube_short.errors[:description].any? %>
          <div class="validator-hint"><%= youtube_short.errors[:description].join(', ') %></div>
        <% end %>
      </div>
    </div>

    <div>
      <div><%= form.label :keywords, class: "label" %></div>
      <div>
        <%= form.text_field :keywords, 
            class: class_names("input w-full!",  "input-error": youtube_short.errors[:keywords].any?), 
            placeholder: "Enter keywords" %>
        <% if youtube_short.errors[:keywords].any? %>
          <div class="validator-hint"><%= youtube_short.errors[:keywords].join(', ') %></div>
        <% end %>
      </div>
    </div>

    <%= form.submit youtube_short.new_record? ? "Create" : "Update", class: "btn btn-primary" %>
  </div>
<% end %>