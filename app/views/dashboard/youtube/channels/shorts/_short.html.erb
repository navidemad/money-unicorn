<%= turbo_frame_tag short, class: "bg-white rounded-lg shadow p-4 hover:shadow-lg transition duration-300" do %>
  <h2 class="text-xl font-semibold"><%= short.title %></h2>
  <p class="text-gray-600 mt-2"><%= truncate(short.transcript, length: 100) %></p>
  <%= link_to "View", dashboard_youtube_short_path(short), class: "mt-3 inline-block text-indigo-600" %>
<% end %>
