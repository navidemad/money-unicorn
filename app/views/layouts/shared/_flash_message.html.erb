<%
  case kind
  when "alert"
    additional_classes = "alert-error border-red-100!"
  when "notice"
    additional_classes = "alert-success border-green-100!"
  else
    additional_classes = "alert-info border-cyan-100!"
  end
%>

<div 
  role="alert" 
  data-turbo-cache="false" 
  data-controller="flash"
  class="<%= class_names(
    "alert alert-soft font-bold mb-3 border-2! relative transition-opacity duration-300 ease-out", 
    additional_classes
  ) %>"
>
  <span><%= message %></span>
  <button 
    type="button" 
    data-action="flash#dismiss"
    class="absolute top-2 right-2 text-gray-500 hover:text-gray-700"
  >
    <%= heroicon "x-mark", size: 20, class: "cursor-pointer" %>
  </button>
</div>
