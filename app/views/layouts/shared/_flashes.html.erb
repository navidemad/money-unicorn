<% if flash[:alert] %>
  <div class="py-2 px-3 bg-red-50 mb-3 text-red-500 font-medium rounded-lg inline-block">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="py-2 px-3 bg-green-50 mb-3 text-green-500 font-medium rounded-lg inline-block">
    <%= flash[:notice] %>
  </div>
<% end %>